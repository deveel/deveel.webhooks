{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [ "src/**.csproj" ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "disableRedirectionValidation": false,
      "properties": {
        "TargetFramework": "net6.0"
      }
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "Deveel Webhhoks",
      "_appName": "Deveel Webhooks",
      "_appFooter": "Copyright &copy; 2022-2023 Deveel AS",
      "_appLogoPath": "images/deveel-logo.png"
    },
    "sitemap": {
      "baseUrl": "https://webhooks.deveel.com",
      "priority": 0.5,
      "changefreq": "monthly"
    },
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ]
      }
    ],
    "template": [
      "default",
      "templates/singulinkfx"
    ]
  }
}